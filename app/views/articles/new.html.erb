<%= form_for :article, url: articles_path do |f| %>
	<h1>
		<%= f.label :title%><br>
		<%= f.text_field :title %>
	</h1>


	<%= f.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id]}) %>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

	<%= link_to 'Back', articles_path %>
<% end %>
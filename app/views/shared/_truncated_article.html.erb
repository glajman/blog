<article class="row">
	<section class="title">
		<h2 class="article"><%= link_to article.title, article %></h2>
	</section>

	<section class="title">
		<p><%= article.category.name %><p>
	</section>

	<section class="test">
		<%= truncate(article.text, length: 500, separator: ".")%>
			<% if logged_in? && current_user.admin? && !current_user?(@user) %>
				<%= link_to 'Delete', article_path(article),
					method: :delete,
					date: { confirm: 'Are you sure?' } %>
			<% else %>
			<% end %>
	</section>
</article>
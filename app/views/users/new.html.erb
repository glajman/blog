<h1 class="title">Log in</h1>

<div class="row">
	<div class="large-6 medium-centered column">
		<%= form_for(@user) do |f| %>
			
			<%= f.label :name %>
			<%= f.text_field :name %></br>

			<%= f.label :email %>
			<%= f.text_field :email %></br>

			<%= f.label :password %>
			<%= f.text_field :password %></br>

			<%= f.label :password_confirmation %>
			<%= f.text_field :password_confirmation %></br></br>

			<div class="title"><%= f.submit "Create new account" %></div></br></br>
			<div class="title"><%= link_to 'Home', articles_path %></div>
	</div>
</div>

<% end %>
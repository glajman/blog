<h1>Log in</h1>

<%= form_for(@user) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %></br>

	<%= f.label :email %>
	<%= f.text_field :email %></br>

	<%= f.label :password %>
	<%= f.text_field :password %></br>

	<%= f.label :password_confirmation %>
	<%= f.text_field :password_confirmation %></br>

	<%= f.submit "Create new account" %></br></br>
	<%= link_to 'Home', articles_path %>

<% end %>